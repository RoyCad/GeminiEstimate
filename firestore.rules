
rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    // Default-deny all access
    match /{document=**} {
      allow read, write: if false;
    }
    
    // Allow any authenticated user to read/write their own user document
    match /users/{userId} {
      allow read, update, delete: if request.auth != null && request.auth.uid == userId;
      // Allow any authenticated user to create their own user document
      allow create: if request.auth != null;
    }
    
    // Admins can read/write any document
    match /{document=**} {
        allow read, write: if get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'Admin';
    }

    // Clients can read projects assigned to them
    match /projects/{projectId} {
        allow read: if request.auth != null && resource.data.userId == request.auth.uid;
    }
    
    // Clients can read transactions and attendances for their own project
    match /projects/{projectId}/{subcollection}/{docId} {
        allow read: if request.auth != null && get(/databases/$(database)/documents/projects/$(projectId)).data.userId == request.auth.uid;
    }
    
    // Clients can submit material proposals
    match /materialProposals/{proposalId} {
        allow create: if request.auth != null && request.resource.data.submittedBy == request.auth.uid;
        allow read: if request.auth != null && resource.data.submittedBy == request.auth.uid;
    }
    
    // Any authenticated user can read the central materials stock
    match /materials/{materialId} {
        allow read: if request.auth != null;
    }
  }
}
